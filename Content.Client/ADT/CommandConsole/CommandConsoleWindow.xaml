<controls1:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls1="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:robust="clr-namespace:Robust.Client.UserInterface.Controls"
    Title="Nanotrasen Command Console v1.42"
    MinSize="1000 700"
    StyleClasses="window-header-fancy">

    <PanelContainer StyleClasses="window-content-fancy" Margin="8" VerticalExpand="True" HorizontalExpand="True">
        <BoxContainer Orientation="Vertical" SeparationOverride="8" Margin="12" HorizontalExpand="True" VerticalExpand="True">

            <!-- Заголовок системы -->
            <PanelContainer StyleClasses="window-header-fancy" MinHeight="60" Margin="0 0 0 8">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="12">
                    <Label Text="NANOTRASEN COMMAND CONSOLE"
                            Align="Center"
                            StyleClasses="LabelHeading font-larger"
                            FontColorOverride="white" />
                    <Label Text="Secure Terminal Interface v1.42"
                            Align="Center"
                            StyleClasses="LabelSecondary"
                            FontColorOverride="lightgray" />
                </BoxContainer>
            </PanelContainer>

            <!-- Основной контент -->
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="12">

                <!-- Левая панель - статус системы -->
                <PanelContainer StyleClasses="window-content-fancy" MinWidth="280" Margin="0 0 8 0">
                    <BoxContainer Orientation="Vertical" Margin="12" SeparationOverride="6">

                        <!-- Статус системы -->
                        <Label Text="SYSTEM STATUS" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 4" />

                        <BoxContainer Orientation="Vertical" SeparationOverride="4" Margin="0 0 0 8">
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="●" FontColorOverride="lime" />
                                <Label Text="Core Online" FontColorOverride="white" HorizontalExpand="True" />
                                <Label Text="OK" FontColorOverride="lime" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="●" FontColorOverride="cyan" />
                                <Label Text="Network Secure" FontColorOverride="white" HorizontalExpand="True" />
                                <Label Text="OK" FontColorOverride="cyan" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="●" FontColorOverride="orange" />
                                <Label Text="Device Synced" FontColorOverride="white" HorizontalExpand="True" />
                                <Label Text="OK" FontColorOverride="orange" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                        </BoxContainer>

                        <!-- Системные ресурсы -->
                        <Label Text="SYSTEM RESOURCES" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 4" />

                        <BoxContainer Orientation="Vertical" SeparationOverride="4" Margin="0 0 0 8">
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="CPU:" FontColorOverride="lightgray" MinWidth="40" />
                                <PanelContainer StyleClasses="window-content-fancy" HorizontalExpand="True" MinHeight="16">
                                    <PanelContainer StyleClasses="window-header-fancy" HorizontalExpand="True" MinHeight="12" Margin="2" />
                                </PanelContainer>
                                <Label Text="23%" FontColorOverride="lime" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="RAM:" FontColorOverride="lightgray" MinWidth="40" />
                                <PanelContainer StyleClasses="window-content-fancy" HorizontalExpand="True" MinHeight="16">
                                    <PanelContainer StyleClasses="window-header-fancy" HorizontalExpand="True" MinHeight="12" Margin="2" />
                                </PanelContainer>
                                <Label Text="67%" FontColorOverride="yellow" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                            <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                                <Label Text="HDD:" FontColorOverride="lightgray" MinWidth="40" />
                                <PanelContainer StyleClasses="window-content-fancy" HorizontalExpand="True" MinHeight="16">
                                    <PanelContainer StyleClasses="window-header-fancy" HorizontalExpand="True" MinHeight="12" Margin="2" />
                                </PanelContainer>
                                <Label Text="45%" FontColorOverride="cyan" StyleClasses="LabelSecondary" />
                            </BoxContainer>
                        </BoxContainer>

                        <!-- Активные процессы -->
                        <Label Text="ACTIVE PROCESSES" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 4" />

                        <BoxContainer Orientation="Vertical" SeparationOverride="2" Margin="0 0 0 8">
                            <Label Text="• Terminal Session" FontColorOverride="lightgreen" StyleClasses="LabelSecondary" />
                            <Label Text="• File System" FontColorOverride="lightgreen" StyleClasses="LabelSecondary" />
                            <Label Text="• Network Stack" FontColorOverride="lightgreen" StyleClasses="LabelSecondary" />
                            <Label Text="• Security Module" FontColorOverride="lightgreen" StyleClasses="LabelSecondary" />
                        </BoxContainer>

                        <!-- Информация о сессии -->
                        <Label Text="SESSION INFO" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 4" />

                        <BoxContainer Orientation="Vertical" SeparationOverride="2" Margin="0 0 0 8">
                            <Label Text="Station: NSS Exodus" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                            <Label Text="Clearance: General Access" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                            <Label Text="User: Console_User_01" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                        </BoxContainer>

                    </BoxContainer>
                </PanelContainer>

                <!-- Правая панель - консоль -->
                <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="8">

                    <!-- Область вывода -->
                    <PanelContainer StyleClasses="window-content-fancy" VerticalExpand="True" HorizontalExpand="True" Margin="0 0 0 8">
                        <BoxContainer Orientation="Vertical" Margin="12" HorizontalExpand="True" VerticalExpand="True">

                            <Label Text="CONSOLE OUTPUT" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 8" />

                            <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="0 0 0 8">
                                <RichTextLabel Name="OutputLabel"
                                               HorizontalExpand="True"
                                               VerticalExpand="True"
                                               StyleClasses="window-content-fancy" />
                            </ScrollContainer>

                        </BoxContainer>
                    </PanelContainer>

                    <!-- Панель ввода -->
                    <PanelContainer StyleClasses="window-content-fancy" MinHeight="120" HorizontalExpand="True">
                        <BoxContainer Orientation="Vertical" Margin="12" HorizontalExpand="True" VerticalExpand="True">

                            <Label Text="COMMAND INPUT" StyleClasses="LabelHeading" FontColorOverride="white" Margin="0 0 0 8" />

                            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="8">
                                <Label Text=">" FontColorOverride="lime" StyleClasses="LabelHeading" Margin="0 0 8 0" />
                                <TextEdit Name="CommandInput"
                                        HorizontalExpand="True"
                                        VerticalExpand="True"
                                        MinHeight="35"
                                        StyleClasses="window-content-fancy" />
                            </BoxContainer>

                            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                                <Button Name="ExecuteButton"
                                        Text="EXECUTE"
                                        ToolTip="Execute command"
                                        StyleClasses="window-header-fancy"
                                        MinWidth="100"
                                        MinHeight="32" />
                            </BoxContainer>

                        </BoxContainer>
                    </PanelContainer>

                </BoxContainer>

            </BoxContainer>

            <!-- Нижняя панель -->
            <PanelContainer StyleClasses="window-header-fancy" HorizontalExpand="True" MinHeight="40" Margin="0 8 0 0">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="12" SeparationOverride="16">
                    <Label Text="NT-CC v1.42" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                    <Label Text="●" FontColorOverride="lime" />
                    <Label Text="Secure Connection" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                    <Label Text="●" FontColorOverride="cyan" />
                    <Label Text="Auto-Save: ON" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                    <Label Text="●" FontColorOverride="orange" />
                    <Label Text="Session Active" FontColorOverride="lightgray" StyleClasses="LabelSecondary" HorizontalExpand="True" />
                    <Label Text="[F1] Help" FontColorOverride="lightgray" StyleClasses="LabelSecondary" />
                </BoxContainer>
            </PanelContainer>

        </BoxContainer>
    </PanelContainer>
</controls1:FancyWindow>
